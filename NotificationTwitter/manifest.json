{
  "author": "Laisson R. Silveira",
  "version": "1.0.1",
  "manifest_version": 2,
  "name": "Notification Twitter Beta",
  "description": "Show notification Twitter",
  "icons": {
    "128": "images/128.png",
    "16": "images/16.png",
    "48": "images/48.png"
  },
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "images/128.png",
    "default_title": "Open options Twitter Notification Beta",
    "default_popup": "html/popup.html"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "options_page": "html/options.html",
  "permissions": [
    "tabs",
    "notifications",
    "http://*.twitter.com/",
    "https://*.twitter.com/"
  ],
  "web_accessible_resources": [
    "background.html"
  ]
}
