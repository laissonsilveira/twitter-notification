{
  "name": "PassBrow - Password for Chrome",
  "short_name" : "PassBrow",
  "default_locale": "en",
  "version": "4.0",
  "manifest_version": 2,
  "minimum_chrome_version": "4.0",
  "options_page": "html/options.html",
  "icons": { "16": "images/icon_16.png",
             "48": "images/icon_48.png",
             "128": "images/icon_128.png" },
  "description": "Protection with password for Chrome.",
  "background": {
	"scripts": ["js/md5.js","js/login.js","js/idle.js","js/start.js"]
   },
   "browser_action": {
    "default_icon": "images/icon_48.png",
    "default_title": "Options", 
    "default_popup": "html/popup.html" 
  },
  "commands": {
    "block_browser": {
      	"suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Block browser"
    }
  },
  "permissions": ["tabs", "notifications", "contextMenus", "idle"],
  "web_accessible_resources": [
    "images/icon_48.png"
  ]
}	